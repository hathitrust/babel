#!/usr/bin/env perl

=head1 NAME

portal

=head1 DESCRIPTION

This program is the application to provide Data API users with an
access point to either get a pair of oauth keys or to authenticate to
user their identity as a proxy for their keys through a web interface.

=head1 SYNOPSIS

http://babel.hathitrust.org/cgi/kgs/portal

From the command line or debugger

=cut

use warnings;
use strict;

BEGIN {
    ## $ENV{DEBUG_LOCAL} = 1;
}

# ----------------------------------------------------------------------
# Set up paths for local libraries -- must come first
# ----------------------------------------------------------------------
use lib "$ENV{SDRROOT}/mdp-lib/Utils";
use Vendors;

use CGI;

use Context;
use Database;
use Utils;
use MdpConfig;

use KGS_Portal;
use KGS_Db;


# make sure cache files/dirs are group writable
umask 0002;

# MDP stuff
my $C = new Context;

# configuration
my $config = new MdpConfig(
                           Utils::get_uber_config_path('kgs'),
                           $ENV{SDRROOT} . "/kgs/lib/Config/global.conf",
                           $ENV{SDRROOT} . "/kgs/lib/Config/local.conf"
                          );
$C->set_object('MdpConfig', $config);

# Database connection
my $db = new Database('ht_web');
$C->set_object('Database', $db);
my $dbh = $db->get_DBH();

# get path_info + query_string from command line
my $Q = CGI->new();
my $action = $Q->param('action');
if ($action) {
    $Q->delete('action');
    $Q->path_info($action);
}

my $app = KGS_Portal->new(
                          QUERY  => $Q,
                          PARAMS => { 
                                     '_context' => $C, 
                                     '_dbh'     => $dbh, 
                                    }
                         );
$app->run();

1;

__END__

