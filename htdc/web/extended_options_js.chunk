    <script type="text/javascript">
      $(document).ready(function(){
        function hide_show_opts() {
          if ($("#pageimageid").is(":checked")) {
              $("#htoptsdiv").show();
            } else {
              $("#htoptsdiv").hide();
            }
        }

        eventHandlerHS = function () {
          hide_show_opts();
        };

        hide_show_opts();
        $('input').bind("click", eventHandlerHS);
      });
    </script>
