#!/usr/bin/env perl

=head1 NAME

htdc

=head1 DESCRIPTION

This is a perl 2-legged oauth client that uses their auth credentials
as a proxy for the oauth keys and constructs a signed VERSION 2 Data
API request.

=head1 SYNOPSIS

For example:

http://babel.hathitrust.org/cgi/htdc (present the data entry form)

http://babel.hathitrust.org/cgi/htdc?resource=volume/pagemeta&id=mdp.39015063764644&seq=5 (send a request to Data API)

=head1 OUTPUT

The form or the resource

=cut

use strict;
use warnings;

use CGI;

# ----------------------------------------------------------------------
# Set up paths for local libraries -- must come first
# ----------------------------------------------------------------------
use lib "$ENV{SDRROOT}/mdp-lib/Utils";
use Vendors;

use HTDC_Client;

BEGIN {
    ## $ENV{DEBUG_LOCAL} = 1;
    # non-US testing
    ## $ENV{REMOTE_ADDR} = '147.96.1.135'; # non-US
}

my $Q = new CGI;

my $version = 2;
my $production_mode = 0;

my @superusers = qw(pfarber roger);
my $development_support = 0;

if ($production_mode) {
    delete $ENV{HT_DEV};
}
else {
    my $userid = $ENV{REMOTE_USER};
    $development_support = defined($ENV{HT_DEV}) || grep(/^$userid$/, @superusers);
    if ($Q->param('over')) {
        $development_support = 0;
        $Q->Delete('over');
    }
}


my $debug = 0;

my $client = new HTDC_Client({
                              version => $version,
                              development_support => $development_support,
                              debug => $debug,
                              _Q => $Q,
                             });

$client->run();

exit 0;


__END__

