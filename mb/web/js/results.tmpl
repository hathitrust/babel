<div class="collection ${stripe} {{if shared == 'Private'}}private{{/if}}" data-num_items="${num_items}" data-owners_name="${owner_name}">
  <p class="collname">{{html collname}}</p>
  <p>${description}</p>
  <p class="meta">
    <span class="num_items">${num_items} item{{if num_items > 1}}s{{/if}}</span>
    <span class="owner_name">Owner: ${owner_name}</span>
    {{if mine}}
    <span class="options">
      <span class="sharing-status">${shared} <a href="#" class="awesome small toggle-sharing">Make ${altshared}</a></span>
       &#160;
      <a href="#" class="awesome small delete-collection">Delete Collection</a>
    </span>
    {{/if}}
    &#160;
  </p>
</div>